<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
      <!--@booksのユーザー情報が欲しい→誤り-->
      <!--indexの時はcurrrent_userでよい-->
      <%= render 'users/info', user: current_user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <!--スペースの追加-->
      <%= render 'index', books: @books %>
    </div>
  </div>
</div>