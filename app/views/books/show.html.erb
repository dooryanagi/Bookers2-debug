<div class='container'>

  <!--エラーの部分テンプレートを呼び出す-->
  <div class='row'>
    <!--渡す変数を直接Book.newで指定-->
    <%= render 'layouts/errors', obj: Book.new %>
  </div>

  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <!--渡すインスタンス変数を追記-->
      <%= render 'users/info', user: @user %>

      <h2 class="mt-3">New book</h2>
      <!--showページだと@bookにはfindで特定したデータが入ってしまう→モデルで直接定義する-->
      <%= render 'form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <!--link_toの行き先がインスタンス変数では遷移できないのでは？、、、-->
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>

          <!--Tagの追加-->
          <td><%= @book.tag %></td>

          <!--★評価の追加-->
          <td id="show-stars"></td>
          <script>
            // エラー回避のためキャッシュクリアを追加
            document.addEventListener("turbolinks:load",function(){
              // 星が増えてしまうエラー
              $('#show-stars').empty();
              let showRateElement = document.querySelector('#show-stars');
              let showOpt = {
                // number:3,
                scoreName:'book[star]',
                starOn:"<%= asset_path('star-on.png') %>",
                starOff:"<%= asset_path('star-off.png') %>",
                readOnly: true,
                score: "<%= @book.star %>",
              };
              window.raty(showRateElement, showOpt);
            });
          </script>

            <!--本人以外はボタンが表示されないようにする-->
          <% if @user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
          <!--urlを指定-->
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>

          <!--いいねの追加-->
          <!--非同期通信化するために部分テンプレートで置き換える-->
          <!--対象のjsファイルを呼び出すためにidを指定-->
          <td id="favorite_btn_<%= @book.id %>">
            <!--テンプレートを呼び出す-->
            <%= render 'favorites/btn', book: @book %>

          </td>
          <!--コメント数の追加-->
          <!--コメントの非同期通信化-->
          <td id="comment_counter">
            <%= render 'book_comments/counter', book: @book %>
          </td>
        </tr>
      </table>

      <div id="comment_index">
        <!--投稿されたコメントの表示-->
        <!--コメントの非同期通信化-->
        <%= render 'book_comments/index', book: @book %>
      </div>

      <!--コメント投稿欄の追加-->
      <!--コメントの非同期通信化-->
        <%= render 'book_comments/form', book: @book, comment: @comment %>

    </div>
  </div>
</div>