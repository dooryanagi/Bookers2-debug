<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <!--colspanをするのはまとめるセルの中では？、、、-->
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <!--ユーザーの詳細に行く-->
        <td><%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <!--urlは_pathで表記-->
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <!--いいねボタンの追加-->
        <!--destroyになってしまう？？-->
        <td><%= link_to "♥", book_favorite_path, method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>