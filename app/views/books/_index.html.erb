<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <!--colspanをするのはまとめるセルの中では？、、、-->
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <!--ユーザーの詳細に行く-->
        <td><%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <!--urlは_pathで表記-->
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <!--いいねボタンの追加-->
        <!--いいねしているかの分岐を追加-->
        <!--destroyになってしまう？？-->
        <!--ここでparams[:book_id]にしてしまうと、URLにbookid情報がないのでエラーになってしまう-->
        <!--ここのURLの引数は詳細ページと同様の目的→どの本にいいねするかを指定する必要がある→eachで順番に入れている本のid情報があればいいねする対象を指定できる-->
        <td>
          <% if book.favorited_by?(current_user) %>
            <%= link_to book_favorite_path(book.id), method: :delete do %>
              ♥<%= book.favorites.count %>
            <% end %>
          <% else %>
            <%= link_to book_favorite_path(book.id), method: :post do %>
              ♡<%= book.favorites.count %>
            <% end %>
          <% end %>
        </td>

        <!--コメント数の追加-->
        <td>
          <%= book.book_comments.count %>コメント
        </td>
      </tr>
    <% end %>
  </tbody>
</table>