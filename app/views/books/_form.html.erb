<%= form_with model:book, local:true do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <!--アイコンは直接クラスには指定できない-->
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>

  <div class="form-group">
    <%= f.label :opinion %>
    <!--アイコンは直接クラスには指定できない-->
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>

  <div class="form-group">
    <!--アイコンは直接クラスには指定できない-->
    <%= f.submit class: 'btn btn-success' %>
  </div>

<% end %>
