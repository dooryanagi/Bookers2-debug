<div class="row">

  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image, size: '50x50' %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          フォロー数：<%= user.active_relationships.count %>
        </td>
        <td>
          フォロワー数:<%= user.passive_relationships.count %>
        </td>
        <td>
          <%= link_to 'Show', user_path(user.id) %>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>


</div>